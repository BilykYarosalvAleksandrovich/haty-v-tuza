generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Модель користувача (для NextAuth)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String // Зберігаємо хешований пароль тут

  // Зв'язки
  favoriteMovies Favorite[]
  history        History[]

  @@map("users")
}

// Модель для улюблених фільмів
model Favorite {
  id        String   @id @default(cuid())
  userId    String
  movieId   Int      // ID фільму з TMDB
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, movieId]) // Користувач не може додати один фільм двічі
  @@map("favorites")
}

// Модель для історії переглядів
model History {
  id        String   @id @default(cuid())
  userId    String
  movieId   Int      // ID фільму з TMDB
  viewedAt  DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])

  @@map("history")
}
